@model Data.Entities.OrderType
@{
    ViewData["Title"] = "Ekle/Düzenle";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-3">
            <label>İsim</label>
            <input class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="OrderTypes" asp-action="Index" class="btn btn-secondary m-1"><i class="fas fa-undo-alt"></i> Geri Don</a>
        <div>
            @if (Model.Id != 0)
            {
                <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash"></i> Sil</button>
            }
            <button type="submit" class="btn btn-success m-1"><i class="fas fa-save"></i> Kaydet</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Silme işlemini onaylıyor musunuz?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button asp-controller="OrderTypes" asp-action="Delete" type="submit" class="btn btn-danger">Sil</button>
                </div>
            </div>
        </div>
    </div>
</form>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}