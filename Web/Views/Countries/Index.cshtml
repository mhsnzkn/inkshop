<div class="d-flex justify-content-end p-3">
    <!-- Large modal -->
    <a asp-controller="Countries" asp-action="Edit" class="btn btn-primary"><i class="fas fa-plus"></i> Ekle</a>
</div>


<table id="datatable" class="table stripe display">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Aciklama</th>
            <th>Islem</th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#datatable').DataTable({
                language: {
                    url: '/lib/datatable/tr/tr.json'
                },
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "pagination":true,
                //"filter": false, // this is for disable filter (search box)
                //"orderMulti": false, // for disable multiple column at once
                //"pageLength": 5,

                "ajax": "/Countries/GetDataTable",
                "columns": [
                    { "data": "name" },
                    { "data": "description" },
                    {
                        "data":"id",
                        render: function (data, type, row) {
                            return '<a href="/Countries/Edit/' + data + '" class="btn btn-sm btn-warning m-1"><i class="fas fa-edit"></i></button>';
                        }
                    }
                ]

            });
        });

        function openModal(id) {
            let model = id === 0 ? null : { id: id };
            let header = id === 0 ? "Ekle" : "Duzenle"

            $('#form-modal').modal('show');

            $.ajax({
                url: "/Countries/Edit",
                type: "get",
                data: model,
                success: function (res) {
                    $("#myLargeModalLabel").text(header);
                    $("#modal-body").html(res);

                },
                error: function (err) {
                    toastr.error("Baglanti hatasi")
                }
            })
        }
    </script>
}