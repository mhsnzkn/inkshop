@model Data.Entities.AccountEntity
@{
    ViewData["Title"] = "Ekle/Düzenle";
}

<p class="text-danger">@ViewData["error"]</p>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<form data-ajax-url="/AccountEntities/Edit" data-ajax="true" data-ajax-method="post" data-ajax-complete="success" data-ajax-failure="ajaxFail">
    <input type="hidden" asp-for="Id" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Ad</label>
            <select id="officeSelect" class="form-control" asp-for="Name"></select>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-md-6">
            <label>E-Mail</label>
            <input class="form-control" asp-for="Mail">
            <span class="text-danger" asp-validation-for="Mail"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Telefon</label>
            <input class="form-control" asp-for="Phone">
            <span class="text-danger" asp-validation-for="Phone"></span>
        </div>
        <div class="form-group col-md-6">
            <label>Şehir</label>
            <input class="form-control" asp-for="City">
            <span class="text-danger" asp-validation-for="City"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label>Adres</label>
            <input class="form-control" asp-for="Address">
            <span class="text-danger" asp-validation-for="Address"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-controller="AccountEntities" asp-action="Index" class="btn btn-secondary m-1"><i class="fas fa-undo-alt"></i> Geri Don</a>
        <div>
            @if (Model.Id != 0)
            {
                <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#deleteModal"><i class="fas fa-trash"></i> Sil</button>
            }
            <button type="submit" class="btn btn-success m-1"><i class="fas fa-save"></i> Kaydet</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Silme işlemini onaylıyor musunuz?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                    <button asp-controller="AccountEntities" asp-action="Delete" type="submit" class="btn btn-danger">Sil</button>
                </div>
            </div>
        </div>
    </div>
</form>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>

        var success = function (xhr) {
            ajaxSuccess(xhr, '/AccountEntities');
        }
    </script>
}